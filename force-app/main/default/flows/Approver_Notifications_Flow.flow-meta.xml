    <formulas>
        <name>isApprovedByRH</name>
        <dataType>Boolean</dataType>
        <expression>AND(ISPICKVAL({!$Record.Status__c}, &quot;Approved&quot;), ISPICKVAL({!$Record__Prior.Status__c}, &quot;Pending HR Approval&quot;))</expression>
    </formulas>
    <formulas>
        <name>isCancellationAccepted</name>
        <dataType>Boolean</dataType>
        <expression>AND(ISPICKVAL({!$Record.Status__c}, &quot;Cancelled&quot;), ISPICKVAL({!$Record__Prior.Status__c}, &quot;Cancellation Requested&quot;))</expression>
    </formulas>
    <formulas>
        <name>isCancellationRefused</name>
        <dataType>Boolean</dataType>
        <expression>AND(ISPICKVAL({!$Record.Status__c}, &quot;Approved&quot;), ISPICKVAL({!$Record__Prior.Status__c}, &quot;Cancellation Requested&quot;))</expression>
    </formulas>
    <formulas>
        <name>isRejectedByRH</name>
        <dataType>Boolean</dataType>
        <expression>AND(ISPICKVAL({!$Record.Status__c}, &quot;Rejected&quot;), ISPICKVAL({!$Record__Prior.Status__c}, &quot;Pending HR Approval&quot;))</expression>
    </formulas>
