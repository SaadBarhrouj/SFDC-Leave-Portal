<LightningMessageChannel xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Sends leave data and context to the calendar component.</description>
    <isExposed>true</isExposed>
    <lightningMessageFields>
        <description>The view context ('my', 'team' or 'managerTeam').</description>
        <fieldName>context</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>The list of leave requests to display.</description>
        <fieldName>leaveRequests</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>The manager ID for the managerTeam context.</description>
        <fieldName>managerId</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>The selected leave request ID for the managerTeam context.</description>
        <fieldName>selectedRequestId</fieldName>
    </lightningMessageFields>
    <masterLabel>LeaveDataForCalendarChannel</masterLabel>
</LightningMessageChannel>